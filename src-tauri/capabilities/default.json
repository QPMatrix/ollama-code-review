{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capabilities for Ollama Code Review application",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"core:window:default",
		"core:app:default",
		"core:event:default",
		"core:path:default",
		{
			"identifier": "http:default",
			"allow": [
				{
					"url": "http://localhost:11434/*"
				},
				{
					"url": "https://api.github.com/*"
				}
			]
		},
		"log:default",
		"dialog:default",
		"dialog:allow-open",
		"dialog:allow-save",
		"dialog:allow-message",
		"dialog:allow-ask",
		"dialog:allow-confirm",
		{
			"identifier": "fs:default",
			"allow": [
				{
					"path": "$APPDATA/*"
				},
				{
					"path": "$APPDATA/**"
				}
			]
		},
		"shell:default",
		"shell:allow-open"
	]
}
